# ===========================================
# GEMVISION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual keys

# ----- AI API KEYS -----
# Anthropic Claude API (for text generation, analysis, prompt engineering)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI / ChatGPT API (for image generation via DALL-E, GPT analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Pro API (for multimodal analysis, vision tasks)
GEMINI_API_KEY=your_gemini_api_key_here

# ----- AWS SERVICES -----
# AWS S3 for image storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=gemvision-images

# ----- DATABASE -----
# PostgreSQL connection (recommended for production)
DATABASE_URL=postgresql://user:password@localhost:5432/gemvision
# Alternative: SQLite for development
# DATABASE_URL=sqlite:///./gemvision.db

# ----- APPLICATION SETTINGS -----
# Backend API
BACKEND_URL=http://localhost:8000
BACKEND_PORT=8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----- SECURITY -----
# Secret key for JWT tokens (generate a random string)
SECRET_KEY=your_secret_key_min_32_chars_long_random_string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ----- CORS SETTINGS -----
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ----- IMAGE GENERATION SETTINGS -----
# Default AI model for jewellery generation
DEFAULT_IMAGE_MODEL=dall-e-3
# Options: dall-e-3, dall-e-2, stable-diffusion

# Image quality settings
IMAGE_QUALITY=hd
# Options: hd, standard

IMAGE_SIZE=1024x1024
# Options for DALL-E-3: 1024x1024, 1792x1024, 1024x1792

MAX_IMAGES_PER_GENERATION=4

# ----- QC INSPECTOR SETTINGS -----
# Use simulated or ML model
QC_MODE=simulated
# Options: simulated, ml

# Confidence threshold for defect detection
QC_CONFIDENCE_THRESHOLD=0.7

# ML Model path (if using ML mode)
QC_MODEL_PATH=./models/qc_model.h5

# ----- FILE UPLOAD SETTINGS -----
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ----- RATE LIMITING -----
RATE_LIMIT_PER_MINUTE=60

# ----- LOGGING -----
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ----- OPTIONAL: ANALYTICS -----
# Google Analytics
NEXT_PUBLIC_GA_ID=

# Sentry for error tracking
SENTRY_DSN=

# ----- OPTIONAL: EMAIL NOTIFICATIONS -----
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@gemvision.com

# ----- REDIS (Optional - for caching) -----
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600
